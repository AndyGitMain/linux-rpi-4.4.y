# 1 "arch/arm/boot/dts/overlays/gpio-ir-overlay.dts"
# 1 "<command-line>"
# 1 "arch/arm/boot/dts/overlays/gpio-ir-overlay.dts"

/dts-v1/;
/plugin/;

/ {
        compatible = "brcm,bcm2708";

        fragment@0 {
                target-path = "/";
                __overlay__ {
                        gpio_ir: ir-receiver {
                                compatible = "gpio-ir-receiver";


                                gpios = <&gpio 18 1>;


                                linux,rc-map-name = "rc-rc6-mce";

                                status = "okay";
                        };
                };
        };

        fragment@1 {
                target = <&gpio>;
                __overlay__ {
                        gpio_ir_pins: gpio_ir_pins {
                                brcm,pins = <18>;
                                brcm,function = <0>;
                                brcm,pull = <1>;
                        };
                };
        };

        __overrides__ {

                gpio_pin = <&gpio_ir>,"gpios:4",
                                        <&gpio_ir_pins>,"brcm,pins:0";
                gpio_pull = <&gpio_ir_pins>,"brcm,pull:0";

                rc-map-name = <&gpio_ir>,"linux,rc-map-name";
        };
};
